<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
    <!-- 定义替换者bean -->
    <bean id="serviceBMethodReplacer" class="com.wxj.lesson001.demo14.ServiceBMethodReplacer" />

    <bean id="serviceA" class="com.wxj.lesson001.demo14.ServiceA" scope="prototype"/>

    <bean id="serviceB" class="com.wxj.lesson001.demo14.ServiceB">
        <replaced-method name="getServiceA" replacer="serviceBMethodReplacer"/>
    </bean>

</beans>